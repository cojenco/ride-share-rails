<%if @driver.errors.any?%>
   <ul>
      <%@driver.errors.each do |column, message|%>
        <li>Ooopppsss &#128584 &#128584 &#128584 ... <%=column.capitalize%> <%=message%></li>
      <%end%>
   </ul>
<%end%>


<%= form_with model: @driver do |f| %>
  <p>Please provide the following information to edit your driver in our database:</p>


  <%= f.label :name %>
  <%= f.text_field :name %>
     <br>
  <%= f.label :vin %>
  <%= f.text_field :vin %>
     <br>
  <%= f.submit "#{action_name} Driver", class:"show-btn" %>
<% end %>